{
    "$schema": "http://json-schema.org/schema#",
    "title": "Badge",
    "description": "A badge component's schema definition.",
    "type": "object",
    "id": "badge",
    "properties": {
        "appearance": {
            "title": "Appearance",
            "type": "string",
            "default": "lowlight",
            "enum": [
                "lowlight",
                "highlight",
                "accent",
                "lightweight"
            ]
        },
        "size": {
            "title": "Size",
            "type": "string",
            "default": "primary",
            "enum": [
                "small",
                "large"
            ]
        }
    },
    "reactProperties": {
        "children": {
            "title": "Building blocks",
            "type": "children",
            "defaults": [
                "text"
            ]
        }
    }
}
